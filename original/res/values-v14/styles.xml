<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat" parent="@style/Platform.V14.AppCompat" />
    <style name="Platform.AppCompat.Light" parent="@style/Platform.V14.AppCompat.Light" />
    <style name="com_mixpanel_android_SurveyActivityTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/com_mixpanel_android_SurveyActivityAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarTabStyle">@style/App_ActionBarTabTheme</item>
        <item name="actionBarTabBarStyle">@style/App_ActionBarTabBarTheme</item>
        <item name="actionBarTabTextStyle">@style/App_ActionBarTabBarTextAppearance</item>
        <item name="actionBarStyle">@style/App_ActionBar</item>
        <item name="actionBarWidgetTheme">@style/App_ActionBarWidget</item>
        <item name="actionBarDivider">@null</item>
        <item name="actionBarItemBackground">@drawable/action_btn_transparent</item>
        <item name="actionMenuTextAppearance">@style/App_ActionTextStyle</item>
        <item name="actionMenuTextColor">@color/action_text_color</item>
        <item name="textAppearanceLargePopupMenu">@style/DropdownRegularLight</item>
        <item name="textAppearanceSmallPopupMenu">@style/DropdownRegularLight</item>
        <item name="actionDropDownStyle">@style/NavDropDownSpinner</item>
        <item name="actionButtonStyle">@style/App_ActionButtonStyle</item>
        <item name="popupMenuStyle">@style/App_PopupMenu</item>
        <item name="panelBackground">@color/white</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Button" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="FormRadioButton" parent="@style/FormRadioButtonBase">
        <item name="android:drawableStart">@drawable/empty</item>
        <item name="android:drawableEnd">@drawable/radio_btn</item>
    </style>
    <style name="SimpleListMultipleChoicePadding">
        <item name="android:paddingLeft">?android:listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:listPreferredItemPaddingRight</item>
    </style>
    <style name="TextAppearance.AppCompat.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.AppCompat.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    <style name="TextAppearance.StatusBar.EventContent" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.EventContent.Info" parent="@style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.EventContent.Line2" parent="@style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Time" parent="@style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    <style name="App_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:panelBackground">@color/white</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="background">@color/new_gray_lightest</item>
        <item name="backgroundStacked">@color/new_gray_lightest</item>
    </style>
    <style name="Platform.V14.AppCompat" parent="@style/Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="@style/Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
</resources>
